<!-- item_message_sent.xml -->
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingStart="64dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/text_message_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_message_background"
        android:maxWidth="240dp"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:text="This is a sample sent message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_timestamp_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="10sp"
        android:text="12:30 PM"
        app:layout_constraintEnd_toEndOf="@id/text_message_sent"
        app:layout_constraintTop_toBottomOf="@id/text_message_sent" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <!-- item_message_received.xml -->
    <?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingTop="8dp"
android:paddingStart="8dp"
android:paddingEnd="64dp">

<TextView
    android:id="@+id/text_message_received"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/received_message_background"
    android:maxWidth="240dp"
    android:padding="12dp"
    android:textColor="@android:color/black"
    android:text="This is a sample received message"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/text_timestamp_received"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:textSize="10sp"
    android:text="12:35 PM"
    app:layout_constraintStart_toStartOf="@id/text_message_received"
    app:layout_constraintTop_toBottomOf="@id/text_message_received" />

</androidx.constraintlayout.widget.ConstraintLayout>